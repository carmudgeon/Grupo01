<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<featureModel xsi:schemaLocation="./resources/featureide.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <struct>
        <and mandatory="true" name="Biblioteca">
            <and mandatory="true" name="GestionDeLibros">
                <feature mandatory="true" name="NumeroTotalLibros"/>
                <feature mandatory="true" name="NumeroTotalLibrosPrestados"/>
                <feature mandatory="true" name="DarLibro"/>
                <feature mandatory="true" name="DarAlquilados"/>
                <feature mandatory="true" name="AgregarCopia"/>
                <feature mandatory="true" name="AlquilarLibro"/>
                <feature mandatory="true" name="DevolverLibro"/>
                <feature mandatory="true" name="InsertarLibro"/>
                <or mandatory="true" name="Buscar">
                    <feature mandatory="true" name="Autor"/>
                    <feature mandatory="false" name="AutorExacto"/>
                    <feature mandatory="true" name="Descriptor"/>
                    <feature mandatory="false" name="DescriptorExacto"/>
                    <feature mandatory="true" name="Titulo"/>
                    <feature mandatory="true" name="buscarPorTituloExacto"/>
                </or>
            </and>
            <and mandatory="true" name="GestionDeUsuarios">
                <feature mandatory="true" name="AutenticarUsuario"/>
                <feature mandatory="true" name="InsertarUsuario"/>
            </and>
        </and>
    </struct>
    <constraints>
        <rule>
            <imp>
                <var>Autor</var>
                <not>
                    <var>AutorExacto</var>
                </not>
            </imp>
        </rule>
        <rule>
            <imp>
                <var>Descriptor</var>
                <not>
                    <var>DescriptorExacto</var>
                </not>
            </imp>
        </rule>
        <rule>
            <imp>
                <var>Titulo</var>
                <not>
                    <var>buscarPorTituloExacto</var>
                </not>
            </imp>
        </rule>
    </constraints>
</featureModel>
